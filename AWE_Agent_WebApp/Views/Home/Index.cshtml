@{
    ViewBag.Title = "Home";
}

<style>
    /* CATEGORY HOVER EFFECT */
    .category-link {
        text-decoration: none;
        color: black;
    }

    .category-card {
        background: #ffffff;
        padding: 15px;
        border-radius: 16px;
        transition: 0.25s;
    }

        .category-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.15);
            cursor: pointer;
        }

    .category-img {
        width: 160px;
        height: 120px;
        object-fit: contain;
        margin-bottom: 10px;
    }
</style>


<!-- 🔵 BLACK FRIDAY BANNER -->
<div class="container mt-4">
    <img src="~/Images/banner.png"
         style="width:100%; border-radius:18px; object-fit:cover;" />
</div>


<!-- CATEGORY SECTION -->
<h3 class="text-center mt-5 mb-4 fw-bold">Shop Deals by Category</h3>

<div class="row text-center justify-content-center">

    <!-- APPLE -->
    <div class="col-2">
        <a href="/Category/Apple" class="category-link">
            <div class="category-card mx-auto">
                <img src="~/Images/apple_imac.jpg" class="category-img" />
                <div>Apple</div>
            </div>
        </a>
    </div>

    <!-- MAJOR APPLIANCE -->
    <div class="col-2">
        <a href="/Category/MajorAppliance" class="category-link">
            <div class="category-card mx-auto">
                <img src="~/Images/cat_fridge.jpg" class="category-img" />
                <div>Major Appliance</div>
            </div>
        </a>
    </div>

    <!-- VIDEO GAMES -->
    <div class="col-2">
        <a href="/Category/VideoGames" class="category-link">
            <div class="category-card mx-auto">
                <img src="~/Images/cat_game.jpg" class="category-img" />
                <div>Video Games</div>
            </div>
        </a>
    </div>

    <!-- LAPTOPS & DESKTOP -->
    <div class="col-2">
        <a href="/Category/Laptops" class="category-link">
            <div class="category-card mx-auto">
                <img src="~/Images/cat_laptop.jpg" class="category-img" />
                <div>Laptops & Desktop</div>
            </div>
        </a>
    </div>

    <!-- CELLPHONES -->
    <div class="col-2">
        <a href="/Category/Cellphones" class="category-link">
            <div class="category-card mx-auto">
                <img src="~/Images/cat_phone.jpg" class="category-img" />
                <div>Cellphones</div>
            </div>
        </a>
    </div>

    <!-- TVS -->
    <div class="col-2">
        <a href="/Category/TVs" class="category-link">
            <div class="category-card mx-auto">
                <img src="~/Images/cat_tv.jpg" class="category-img" />
                <div>TVs & Projector</div>
            </div>
        </a>
    </div>

</div>
