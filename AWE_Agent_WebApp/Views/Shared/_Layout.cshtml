<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - AWE Electronics</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f5f5f5;
            font-family: Arial, sans-serif;
        }

        /* TOP NAVBAR */
        .top-nav {
            background: white;
            padding: 15px 40px;
            border-bottom: 1px solid #ddd;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .top-nav img.logo-img {
                height: 48px;
            }

        .search-bar input {
            width: 450px;
            height: 36px;
            border-radius: 6px;
            border: 1px solid #ccc;
            padding: 0 12px;
        }

        .top-links a {
            margin-left: 25px;
            font-weight: 500;
            color: black;
            text-decoration: none;
        }

        /* MAIN MENU */
        .menu-bar {
            background: white;
            padding: 8px 40px;
            border-bottom: 1px solid #ddd;
            display: flex;
            gap: 25px;
        }

            .menu-bar a {
                font-weight: 600;
                text-decoration: none;
                color: black;
            }

        footer {
            text-align: center;
            padding: 25px;
            margin-top: 40px;
            background: #f5f5f5;
            font-size: 14px;
            border-top: 1px solid #ddd;
        }
    </style>
<style>
    .category-link {
        text-decoration: none;
        color: black;
    }

    .category-card {
        background: #fff;
        padding: 15px;
        border-radius: 16px;
        transition: 0.25s;
    }

        .category-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.15);
            cursor: pointer;
        }
</style>

</head>

<body>

    <!-- TOP BAR -->
    <div class="top-nav">

        <!-- LOGO IMAGE -->
        <a href="/Home/Index" class="d-flex align-items-center" style="text-decoration:none;">
            <img src="~/Images/logo.png"
                 style="width:55px; height:55px; margin-right:12px;" />

            <span style="font-size:28px; font-weight:800; color:black;">
                AWE Electronics
            </span>
        </a>


        <!-- SEARCH BAR -->
        <div class="search-bar">
            <input type="text" placeholder="Search for products..." />
        </div>

        <!-- TOP LINKS -->
        <div class="top-links">
            <a href="/Account/Login">Account</a>
            <a href="/ShoppingCart">Cart</a>
        </div>
    </div>

    <!-- MAIN MENU -->
    <div class="menu-bar">
        <a href="#">Menu</a>
        <a href="#">Black Friday Deals</a>
        <a href="#">Top Deals</a>
        <a href="#">Deal of the day</a>
        <a href="#">News</a>
        <a href="/Cart">Shopping Cart</a>
        <a href="#">Gift cards</a>
    </div>

    <!-- PAGE CONTENT -->
    <div>
        @RenderBody()
    </div>

    <footer>
        © 2025 - AWE Electronics. All Rights Reserved.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
