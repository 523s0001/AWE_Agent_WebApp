@model List<AWE_Agent_WebApp.Models.CartItem>

@{
    ViewBag.Title = "Checkout";
}

<style>
    .checkout-title {
        font-size: 40px;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .checkout-box {
        background: #fff;
        border-radius: 18px;
        padding: 35px;
        border: 1px solid #ddd;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    .checkout-input {
        width: 100%;
        height: 48px;
        border-radius: 12px;
        border: 1px solid #ddd;
        padding: 0 15px;
        margin-bottom: 18px;
        font-size: 15px;
    }

        .checkout-input::placeholder {
            color: #bbb;
        }

    .checkout-btn {
        width: 100%;
        height: 48px;
        background: #222;
        color: white;
        font-weight: 600;
        border-radius: 10px;
        transition: 0.2s;
    }

        .checkout-btn:hover {
            background: #000;
        }

    .order-summary-box {
        background: #fff;
        border-radius: 18px;
        border: 1px solid #ddd;
        padding: 25px;
    }

    .order-item {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

        .order-item img {
            width: 70px;
            height: 70px;
            object-fit: contain;
            border-radius: 10px;
            margin-right: 15px;
        }

    .back-link {
        display: inline-block;
        margin-bottom: 20px;
        color: black;
        font-size: 18px;
        text-decoration: none;
    }
</style>

<div class="container mt-4">

    <a href="/ShoppingCart" class="back-link">← Back to Shopping Cart</a>

    <div class="row">

        <!-- LEFT FORM -->
        <div class="col-md-7">

            <div class="checkout-box">
                <h3 class="fw-bold mb-4">🚚 Shipping Information</h3>

                <form method="post" action="/Checkout/SubmitShipping">

                    <div class="row">
                        <div class="col-md-6">
                            <label>First name</label>
                            <input type="text" class="checkout-input" placeholder="John" required />
                        </div>

                        <div class="col-md-6">
                            <label>Last name</label>
                            <input type="text" class="checkout-input" placeholder="Doe" required />
                        </div>
                    </div>

                    <label>Email</label>
                    <input type="email" class="checkout-input" placeholder="your@gmail.com" required />

                    <label>Phone number</label>
                    <input type="text" class="checkout-input" placeholder="123 456 7890" required />

                    <label>Street address</label>
                    <input type="text" class="checkout-input" placeholder="Street address" required />

                    <label>City</label>
                    <div class="row">
                        <div class="col-md-4">
                            <input type="text" class="checkout-input" placeholder="Melbourne" required />
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="checkout-input" placeholder="VIC" required />
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="checkout-input" placeholder="3000" required />
                        </div>
                    </div>

                    <button type="submit" class="checkout-btn mt-3">Continue to Payment</button>

                </form>
            </div>
        </div>


        <!-- ORDER SUMMARY -->
        <div class="col-md-5">

            <div class="order-summary-box">

                <h3 class="fw-bold mb-3">Order summary</h3>
                <hr />

                @foreach (var item in Model)
                {
                    <div class="order-item">
                        <img src="@item.Image" />

                        <div class="flex-grow-1">
                            <div class="fw-bold">@item.Name</div>
                            <div class="text-muted">Qty: @item.Quantity</div>
                        </div>

                        <div class="fw-bold">$@item.Price</div>
                    </div>
                }

                <hr />

                @{
                    decimal subtotal = Model.Sum(x => x.Price * x.Quantity);
                }

                <div class="d-flex justify-content-between">
                    <span>Subtotal</span>
                    <span>@subtotal.ToString("#,##0")</span>
                </div>

                <div class="d-flex justify-content-between text-success">
                    <span>Shipping fee</span>
                    <span>FREE</span>
                </div>

                <hr />

                <h4 class="fw-bold d-flex justify-content-between">
                    <span>Total</span>
                    <span class="text-primary">@subtotal.ToString("#,##0")</span>
                </h4>

            </div>

        </div>

    </div>
</div>
