@model AWE_Agent_WebApp.Models.Product

<h2>Create New Product</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>SKU</label>
        @Html.TextBoxFor(m => m.SKU, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Price</label>
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Stock Qty</label>
        @Html.TextBoxFor(m => m.StockQty, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Category ID</label>
        @Html.TextBoxFor(m => m.CategoryID, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Brand ID</label>
        @Html.TextBoxFor(m => m.BrandID, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Description</label>
        @Html.TextAreaFor(m => m.ShortDesc, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Save</button>
}
