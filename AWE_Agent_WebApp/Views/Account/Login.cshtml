@{
    Layout = null; /* KHÔNG dùng layout chung → login trông chuyên nghiệp hơn */
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - AWE Electronics</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f5f5f7;
            font-family: Arial, sans-serif;
        }

        .login-container {
            width: 420px;
            margin: 80px auto;
            background: white;
            padding: 35px;
            border-radius: 16px;
            box-shadow: 0 4px 14px rgba(0,0,0,0.08);
        }

        .login-title {
            font-size: 28px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 20px;
        }

        .login-input {
            width: 100%;
            height: 48px;
            border-radius: 10px;
            border: 1px solid #ccc;
            padding-left: 14px;
            margin-bottom: 18px;
        }

        .login-btn {
            width: 100%;
            height: 48px;
            background: #222;
            color: white;
            border-radius: 10px;
            font-weight: 600;
            transition: 0.25s;
        }

            .login-btn:hover {
                background: #000;
            }

        .links {
            text-align: center;
            margin-top: 15px;
        }

            .links a {
                text-decoration: none;
                font-size: 14px;
                color: #0071e3;
            }

        .logo-img {
            display: block;
            margin: 0 auto 15px auto;
            width: 80px;
        }
    </style>
</head>

<body>

    <div class="login-container">

        <a href="/Home/Index">
            <img src="~/Images/logo.png" class="logo-img" alt="Logo" />
        </a>
            

        <div class="login-title">Sign in to AWE Electronics</div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form method="post" action="/Account/Login">
            <input type="email" name="email" class="login-input" placeholder="Email address" required />

            <input type="password" name="password" class="login-input" placeholder="Password" required />

            <button type="submit" class="login-btn">Sign in</button>
        </form>

        <div class="links mt-3">
            <a href="#">Forgot your password?</a><br />
            <a href="#">Create an account</a>
        </div>

    </div>

</body>
</html>
